# EditorConfig for ANF-AIOps
# Author: Dwiref Sharma <DwirefS@SapientEdge.io>
# Consistent coding styles across different editors and IDEs

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# TypeScript and JavaScript files
[*.{ts,tsx,js,jsx}]
indent_style = space
indent_size = 2
quote_type = single
max_line_length = 100

# JSON files
[*.json]
indent_style = space
indent_size = 2
insert_final_newline = false

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# C# files
[*.cs]
indent_style = space
indent_size = 4
max_line_length = 120

# C# project files
[*.{csproj,vbproj,vcxproj,vcxproj.filters,proj,projitems,shproj}]
indent_style = space
indent_size = 2

# XML files
[*.{xml,config,props,targets,nuspec,resx,ruleset,vsixmanifest,vsct}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# PowerShell files
[*.{ps1,psm1,psd1}]
indent_style = space
indent_size = 4

# Shell script files
[*.{sh,bash,zsh}]
indent_style = space
indent_size = 2
end_of_line = lf

# Batch files
[*.{bat,cmd}]
end_of_line = crlf

# Terraform files
[*.{tf,tfvars}]
indent_style = space
indent_size = 2

# Bicep files
[*.bicep]
indent_style = space
indent_size = 2

# Docker files
[{Dockerfile,Dockerfile.*}]
indent_style = space
indent_size = 2

# Azure DevOps and GitHub workflows
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Package files (lock files should not be edited)
[{package-lock.json,yarn.lock,pnpm-lock.yaml}]
indent_style = space
indent_size = 2
insert_final_newline = false
trim_trailing_whitespace = false

# Git files
[.gitignore]
trim_trailing_whitespace = true
insert_final_newline = true

# License and legal files
[{LICENSE,COPYING}]
trim_trailing_whitespace = true
insert_final_newline = true

# Configuration files
[*.{ini,cfg,conf}]
indent_style = space
indent_size = 2

# SQL files
[*.sql]
indent_style = space
indent_size = 2
max_line_length = 120

# HTML files
[*.{htm,html}]
indent_style = space
indent_size = 2

# CSS and SCSS files
[*.{css,scss,sass,less}]
indent_style = space
indent_size = 2

# Properties files
[*.properties]
end_of_line = lf
charset = utf-8

# Environment files
[.env*]
trim_trailing_whitespace = true
insert_final_newline = true

# TypeScript declaration files
[*.d.ts]
indent_style = space
indent_size = 2

# Test files
[*.{test,spec}.{ts,js}]
indent_style = space
indent_size = 2

# Azure-specific files
[*.{bicep,arm,template}]
indent_style = space
indent_size = 2

# Security and scanning configuration files
[{.semgrepignore,.gitleaksignore,.checkovignore}]
trim_trailing_whitespace = true
insert_final_newline = true

# Pre-commit hooks
[.pre-commit-config.yaml]
indent_style = space
indent_size = 2

# ESLint and Prettier configuration
[.{eslintrc,prettierrc}*]
indent_style = space
indent_size = 2

# TSConfig files
[tsconfig*.json]
indent_style = space
indent_size = 2

# Jest configuration
[jest.config.*]
indent_style = space
indent_size = 2

# Azure NetApp Files specific files
[*{anf,netapp,volume,snapshot}*]
indent_style = space
indent_size = 2

# Documentation files
[*.{txt,rtf}]
trim_trailing_whitespace = true
insert_final_newline = true

# Archive and binary files (should not be processed)
[*.{zip,tar,gz,7z,rar,pdf,png,jpg,jpeg,gif,ico,svg,woff,woff2,ttf,eot}]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset