# Azure Configuration
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_RESOURCE_GROUP=your-resource-group
AZURE_LOCATION=eastus
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret

# Monitoring Configuration
LOG_ANALYTICS_WORKSPACE_ID=your-workspace-id
APPLICATION_INSIGHTS_KEY=your-app-insights-key

# Security Configuration
KEY_VAULT_URL=https://your-keyvault.vault.azure.net/
ALLOWED_IPS=10.0.0.0/24,172.16.0.0/24
ENABLE_AUDIT_LOGGING=true

# Server Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# ANF Limits
MAX_VOLUME_SIZE=102400
MIN_VOLUME_SIZE=100
MAX_SNAPSHOTS_PER_VOLUME=255
REQUEST_TIMEOUT=300000

# API Management
APIM_SUBSCRIPTION_KEY=your-apim-key
APIM_ENDPOINT=https://your-apim.azure-api.net

# Teams Integration
TEAMS_APP_ID=your-teams-app-id
TEAMS_APP_PASSWORD=your-teams-app-password

# Copilot Configuration
COPILOT_ENDPOINT=https://your-copilot-endpoint
COPILOT_API_KEY=your-copilot-key